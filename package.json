{
    "name": "react-layman",
    "version": "0.2.10-alpha",
    "type": "module",
    "description": "A dynamic tiling layout manager made for React",
    "main": "lib/react-layman.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "scripts": {
        "dev": "vite",
        "build:demo": "tsc && vite build",
        "preview": "vite preview",
        "build:lib": "tsc --project tsconfig-build.json && vite build --config vite.lib.config.ts",
        "clean": "rm -rf lib/",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "exit 0",
        "prepublishOnly": "npm run build:lib"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Jeshwin/react-layman.git"
    },
    "keywords": [
        "ui",
        "react",
        "typescript",
        "component",
        "react-layman",
        "window-manager",
        "tiling-window-manager"
    ],
    "author": "Jeshwin Prince",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Jeshwin/react-layman/issues"
    },
    "homepage": "https://github.com/Jeshwin/react-layman#readme",
    "dependencies": {
        "lodash": "^4.17.21",
        "react": "^18",
        "react-dnd": "^16.0.1",
        "react-dnd-html5-backend": "^16.0.1",
        "react-dom": "^18",
        "react-icons": "^5.1.0",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@types/lodash": "^4.17.0",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "vite": "^5.2.0",
        "vite-plugin-dts": "^4.3.0",
        "vite-plugin-lib-inject-css": "^2.1.1",
        "react": "^18",
        "react-dom": "^18"
    },
    "peerDependencies": {
        "react": "^18",
        "react-dom": "^18"
    }
}
